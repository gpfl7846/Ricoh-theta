<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/fsv_three"
    android:layout_width="300dip"
    android:layout_height="500dip"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp"
    android:paddingRight="10dp"
    android:background="#ffffff">


    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView2"
        android:background="@drawable/ic_logo"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:paddingBottom="4dp"
        android:id="@+id/linear5"
        android:gravity="center_horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"


            android:gravity="center_horizontal"
            android:id="@+id/li">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="주요기능- 3. 설정"
                android:gravity="center_horizontal|left"
                android:background="#ffffff"
                android:textColor="#000"
                android:textSize="17dp"
                android:id="@+id/in111"
                android:singleLine="false" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xml_border2"
        android:id="@+id/BIG"
        android:gravity="center_horizontal"
        android:padding="1dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#e85c42"
            android:paddingBottom="5dp"
            android:id="@+id/linear3"
            android:gravity="center_horizontal"
            android:paddingRight="30dp"
            android:paddingLeft="20dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView3"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_tab_one"
                android:adjustViewBounds="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/imageView4"
                android:layout_gravity="center_horizontal|center"
                android:background="@drawable/ic_tab_two" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="0.1"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_tab_three" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView6"
                android:background="@drawable/ic_finger" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#ffffff"
            android:paddingBottom="4dp"
            android:id="@+id/linear4"
            android:gravity="center_horizontal">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#ffffff"
                android:paddingBottom="4dp"
                android:gravity="center_horizontal">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/intro3"
                    android:gravity="center_horizontal"
                    android:background="#ffffff"
                    android:layout_weight="0.3"
                    android:padding="10dp"
                    android:id="@+id/in4"
                    android:autoText="false" />

            </LinearLayout>

        </LinearLayout>


</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="#ffffff"
        android:paddingBottom="4dp"
        android:id="@+id/linear88"
        android:gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="#ffffff"
            android:paddingBottom="4dp"
            android:gravity="center_horizontal"
            android:id="@+id/li99">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/intro4"
                android:gravity="center_horizontal|left"
                android:background="#ffffff"
                android:textSize="17sp"
                android:id="@+id/iq"
                android:singleLine="false"
                android:layout_marginRight="5dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                android:id="@+id/close"
                android:background="#e85c42"
                android:text="확인"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>